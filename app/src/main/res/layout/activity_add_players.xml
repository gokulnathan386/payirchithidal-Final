<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen"
    tools:context=".AddPlayersActivity">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_listview"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:text="First Name" />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="text"
                android:textColor="#191919"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/addplayer_border" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="25dp"
                android:text="Last Name" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:inputType="text"
                android:background="@drawable/addplayer_border"
                android:ems="10"
                android:padding="10dp"
                android:textColor="#191919"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:text="Branch" />

            <Spinner
                android:id="@+id/Branchspinner"
                android:layout_width="fill_parent"
                android:textColor="#191919"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:text="Batch" />
            <Spinner
                android:id="@+id/Batch"
                android:textColor="#191919"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:text="Mobile" />
            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="phone"
                android:maxLength="10"
                android:background="@drawable/addplayer_border"
                android:padding="5dp"
                android:textSize="15dp"
                android:textColor="#191919"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Email" />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/addplayer_border"
                android:padding="5dp"
                android:inputType="textEmailAddress"
                android:textSize="15dp"
                android:textColor="#191919"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:text="kit" />
            <TextView
                android:id="@+id/mutlikit"
                android:layout_width="match_parent"
                android:hint="Select Kit"
                android:layout_gravity="center"
                android:textColor="#191919"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:text="Address" />
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/addplayer_border"
                android:padding="5dp"
                android:textSize="15dp"
                android:singleLine="true"
                android:textColor="#191919"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="country" />
            <Spinner
                android:id="@+id/countryply"
                android:layout_width="fill_parent"
                android:textColor="#191919"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="State" />
            <Spinner
                android:id="@+id/stateply"
                android:textColor="#191919"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="city" />
            <Spinner
                android:id="@+id/cityply"
                android:layout_width="fill_parent"
                android:textColor="#191919"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Joining Date" />

            <EditText
                android:id="@+id/playdate"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:textColorHint="#3b88bc"
                android:textColor="#191919"
                android:textSize="15dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:background="@drawable/addplayer_border"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/playimg"
                    android:padding="5dp"
                    android:background="@drawable/addboarder"
                    android:src="@drawable/pimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/Qrcode"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/addplayer_border"
                    android:src="@drawable/qrcode"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent">

                <TextView
                    android:padding="5dp"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="90dp"
                    android:text="Qr Code"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/cancelbtn"
                    android:text="Cancel"
                    android:background="@drawable/addboarder"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginLeft="80dp"
                    android:layout_width="100dp"
                    android:layout_height="45dp">
                </Button>
                <Button
                    android:id="@+id/savebtn"
                    android:text="save"
                    android:textColor="@color/white"
                    android:backgroundTint="#0071bd"
                    android:textStyle="bold"
                    android:background="@drawable/addboarder"
                    android:layout_toRightOf="@id/cancelbtn"
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="45dp">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>