<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    android:background="@drawable/listboard"
    >
    <ImageView
        android:id="@+id/prImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#44b0f8"
        android:padding="11dp"
        android:src="@drawable/pimg" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/FirstNameFeesPendingList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="#191919"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="15dp"
            android:text="Total:"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TotalAmountFees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="15dp"
            android:text="Paid:"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/PaidAmountFees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="15dp"
            android:text="Balance:"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/BalanceAmountFees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:gravity="end">
        <TextView
            android:id="@+id/ButtonLinkSendFees"
            android:padding="5dp"
            android:background="@drawable/sendpaymentlink"
            android:layout_width="wrap_content"
            android:text="Send Payment Link"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
</RelativeLayout>