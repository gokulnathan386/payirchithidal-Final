<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:padding="10dp"
    android:background="@drawable/listboard"
    >

    <ImageView
        android:id="@+id/prImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#44b0f8"
        android:padding="11dp"
        android:src="@drawable/pimg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="65dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/playername"
            android:layout_marginTop="9dp"
            />
        <TextView
            android:id="@+id/playeramount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playername"
            android:layout_marginTop="9dp"
            android:textColor="#191919"
            android:layout_marginLeft="6dp"
            android:drawableLeft="@drawable/currency_rupee"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dp"
            android:id="@+id/branch"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#191919"
            android:drawableLeft="@drawable/location"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/joindate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#191919"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/date"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        android:gravity="end">

        <ImageView
            android:id="@+id/delFees"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_delete"></ImageView>
    </LinearLayout>
</RelativeLayout>