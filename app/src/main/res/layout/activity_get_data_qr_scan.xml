<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homescreen"
    tools:context=".GetDataQrScanActivity">

    <include layout="@layout/app_bar_getdataqrscanactivity" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/PlayerFirstName"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/PlayerLastName"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:text="Batch:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/PlayerBatch"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:text="Branch:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/PlayerBranch"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/AttendButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/addboarder"
            android:backgroundTint="#FFFFFF"
            android:text="Attend"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/FeesButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/addboarder"
            android:backgroundTint="#FFFFFF"
            android:text="Fees"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/AttendDesign"
        android:layout_width="match_parent"
        android:background="@drawable/background_listview"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Select Date"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/AttendDataPick"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:background="@drawable/addplayer_border"
            android:padding="10dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Temperature"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/Temperature"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:inputType="number|numberDecimal"
            android:background="@drawable/addplayer_border"
            android:padding="10dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Attendance"
            android:textColor="@color/white" />
        <Spinner
            android:id="@+id/Attendspinner"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:background="@drawable/addplayer_border"
         />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/AttendPlayerButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/addboarder"
            android:backgroundTint="#FFFFFF"
            android:text="submit"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
     </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/FeesDesign"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/background_listview"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/NoRecordFoundScan"
                android:text="No Record Found"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:id="@+id/FeesTitleScan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:layout_marginRight="25dp"
                    android:text="Payment Date"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="Due"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Paid"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/MonthlyAmountAndYearlyAmountTitleScan"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="25dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="Date"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="Amount"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/getfees"
                        android:orientation="vertical">
                        <ListView
                            android:id="@+id/balancelist"
                            android:layout_width="wrap_content"
                            android:layout_height="140dp"
                            android:layout_marginTop="5dp"
                            android:divider="@null"
                            android:dividerHeight="8dp"
                            android:nestedScrollingEnabled="true"
                            android:scrollbarStyle="outsideOverlay"
                            android:scrollbars="vertical"
                            android:scrollingCache="true"
                            android:smoothScrollbar="true">
                        </ListView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/inputbox"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Pending Amount:"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:id="@+id/EntreYourPaidAmount"
                                    android:textStyle="bold"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                </TextView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="2dp"
                                android:layout_height="25dp"
                                android:text="Payable Amount" />

                            <EditText
                                android:id="@+id/payamount"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="25dp"
                                android:background="@drawable/addplayer_border"
                                android:backgroundTint="#F5F5F5"
                                android:padding="10dp"
                                android:maxLength="10"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textStyle="bold"
                                android:textColor="#0368ab" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/plyamount"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/addboarder"
                    android:backgroundTint="#FFFFFF"
                    android:text="submit"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>