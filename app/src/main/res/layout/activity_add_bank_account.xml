<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="5dp"
android:background="@drawable/homescreen"
tools:context=".AddBankAccount">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_listview"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Holder Name" />
        <EditText
            android:id="@+id/Holdername"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:singleLine="true"
            android:textColor="#191919"
            android:inputType="text"
            android:background="@drawable/addplayer_border" />

        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Bank Name" />
        <Spinner
            android:id="@+id/bankname"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textColor="#3b88bc"
            android:background="@drawable/addplayer_border"
            android:textStyle="bold|italic" />
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Account No" />
        <EditText
            android:id="@+id/AccNumber"
            android:inputType="number"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:singleLine="true"
            android:textColor="#191919"
            android:background="@drawable/addplayer_border" />
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="IFSC Code" />
        <EditText
            android:id="@+id/BankIfsc"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#191919"
            android:inputType="text"
            android:singleLine="true"
            android:maxLength="11"
            android:layout_width="fill_parent"
            android:background="@drawable/addplayer_border"
            android:layout_height="40dp" />
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Branch Name" />
        <EditText
            android:id="@+id/Bankbranch"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#191919"
            android:inputType="text"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:background="@drawable/addplayer_border"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/cancelbtnuser"
                android:text="Cancel"
                android:background="@drawable/addboarder"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginLeft="80dp"
                android:layout_width="100dp"
                android:layout_height="45dp">
            </Button>
            <Button
                android:id="@+id/savebtn"
                android:text="save"
                android:textColor="@color/white"
                android:backgroundTint="#0071bd"
                android:textStyle="bold"
                android:background="@drawable/addboarder"
                android:layout_toRightOf="@id/cancelbtn"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="45dp">
            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>