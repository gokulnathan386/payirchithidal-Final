<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen"
    tools:context=".ui.home.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">
        <ImageView
            android:id="@+id/profileimg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/profile_border"
            android:cropToPadding="true"
            android:padding="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pimg" />
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="hello gokulnahan"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:background="@drawable/boarderline"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="80dp"
            android:height="80dp"
            android:gravity="center"
            android:text="Player\n"
            android:onClick="dashBoardPlayerList"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            />
      <TextView
          android:id="@+id/playercount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="-35dp"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="15dp"
          android:textStyle="bold">
      </TextView>
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/boarderline"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80dp"
                android:height="80dp"
                android:gravity="center"
                android:text="Batch\n"
                android:onClick="dashBoardBatchList"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/batchcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/boarderline"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="80dp"
            android:height="80dp"
            android:gravity="center"
            android:text="Kit\n"
            android:onClick="dashBoardKitList"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/kitcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-35dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:background="@drawable/db_layout">

        <RelativeLayout
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/text1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shadow"
                android:cropToPadding="true"
                android:onClick="scan"
                android:padding="25dp"
                android:src="@drawable/scan" />

            <TextView
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="113dp"
                android:text="Scan"
                android:textColor="@color/royal_blue"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/feesbtn"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shadow"
                android:cropToPadding="true"
                android:onClick="Feesbtn"
                android:padding="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fees" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="113dp"
                android:text="Fees"
                android:textColor="@color/royal_blue"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/text1"
                android:layout_marginTop="30dp"
                android:background="@drawable/shadow"
                android:cropToPadding="true"
                android:onClick="Player"
                android:padding="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/player" />

            <TextView
                android:id="@+id/playbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="253dp"
                android:text="Player"
                android:textColor="@color/royal_blue"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/feesbtn"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shadow"
                android:cropToPadding="true"
                android:onClick="attendancebtn"
                android:padding="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/atten" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="173dp"
                android:layout_marginTop="253dp"
                android:text="Attendance"
                android:textColor="@color/royal_blue"
                android:textStyle="bold" />

        </RelativeLayout>
<ListView
    android:id="@+id/notifylist"
    android:layout_width="wrap_content"
    android:layout_below="@id/icon"
    android:visibility="gone"
    android:layout_height="wrap_content">
</ListView>
    </RelativeLayout>
</RelativeLayout>