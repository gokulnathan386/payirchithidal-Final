<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:padding="10dp"
    android:background="@drawable/listboard"
    >

    <ImageView
        android:id="@+id/kitImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#44b0f8"
        android:src="@drawable/pimg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="65dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/branchname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:textColor="#191919"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/branchaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="#191919"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=","
            android:textColor="#191919"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/branchcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="#191919"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/branchcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#0368ab"
            android:textSize="13dp"
            android:textStyle="bold"/>

    </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        android:gravity="end">

        <ImageView
            android:id="@+id/editbranch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/edit"
            android:onClick="editplayer"></ImageView>

        <ImageView
            android:id="@+id/brdel"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_delete"></ImageView>
    </LinearLayout>
</RelativeLayout>