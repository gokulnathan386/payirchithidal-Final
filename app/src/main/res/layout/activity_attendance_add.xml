<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/homescreen"
    tools:context=".AddAttendanceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_listview"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Players Name" />

            <AutoCompleteTextView
                android:id="@+id/Plyname"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="text"
                android:textColor="#191919"
                android:textSize="15dp"
                android:background="@drawable/addplayer_border"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Select Date" />

            <EditText
                android:id="@+id/datapick"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textColor="#191919"
                android:textSize="15dp"
                android:background="@drawable/addplayer_border"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Temperature" />

            <EditText
                android:id="@+id/Temperature"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textColor="#191919"
                android:textSize="15dp"
                android:inputType="number|numberDecimal"
                android:singleLine="true"
                android:background="@drawable/addplayer_border"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Attendance" />

            <Spinner
                android:id="@+id/Attendspinner"
                android:layout_width="fill_parent"
                android:textColor="#191919"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />

              <!--  <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:id="@+id/radioGroup">
                    <RadioButton
                        android:id="@+id/Present"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="  Present"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:checked="false"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/absent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="   Absent"
                        android:textColor="@color/white"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:checked="false"
                        android:textSize="20dp" />
                </RadioGroup>-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/cancelbtnuser"
                    android:text="Cancel"
                    android:background="@drawable/addboarder"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginLeft="80dp"
                    android:layout_width="100dp"
                    android:layout_height="45dp">
                </Button>
                <Button
                    android:id="@+id/savebtn"
                    android:text="save"
                    android:textColor="@color/white"
                    android:backgroundTint="#0071bd"
                    android:textStyle="bold"
                    android:background="@drawable/addboarder"
                    android:layout_toRightOf="@id/cancelbtn"
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="45dp">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>