<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="5dp"
android:background="@drawable/homescreen"
tools:context=".EditUserActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_listview"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="First Name" />

        <EditText
            android:id="@+id/firstname"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:textColor="#191919"
            android:inputType="text"
            android:background="@drawable/addplayer_border"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Last Name" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:textColor="#191919"
            android:inputType="text"
            android:textStyle="bold"
            android:background="@drawable/addplayer_border"
             />
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Email" />

        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:textColor="#191919"
            android:inputType="text"
            android:textStyle="bold"
            android:background="@drawable/addplayer_border" />
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Roles" />

        <Spinner
            android:id="@+id/roles"
            android:layout_width="fill_parent"
            android:background="@drawable/addplayer_border"
            android:layout_height="40dp" />
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Branch" />

        <Spinner
            android:id="@+id/branch"
            android:layout_width="fill_parent"
            android:background="@drawable/addplayer_border"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/celbtnuser"
                android:text="Cancel"
                android:background="@drawable/addboarder"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginLeft="80dp"
                android:layout_width="100dp"
                android:layout_height="45dp">
            </Button>
            <Button
                android:id="@+id/savebtn"
                android:text="save"
                android:textColor="@color/white"
                android:backgroundTint="#0071bd"
                android:textStyle="bold"
                android:background="@drawable/addboarder"
                android:layout_toRightOf="@id/cancelbtn"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="45dp">
            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

</ScrollView>