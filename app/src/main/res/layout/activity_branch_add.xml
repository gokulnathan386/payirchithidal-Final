<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/homescreen"
    tools:context=".AddBranchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_listview"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:text="Branch Name" />

            <EditText
                android:id="@+id/BranchName"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:inputType="text"
                android:textSize="15dp"
                android:textColor="#191919"
                android:background="@drawable/addplayer_border" />

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Address" />

            <EditText
                android:id="@+id/Address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/addplayer_border"
                android:padding="10dp"
                android:inputType="text"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#191919" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Address 1" />

            <EditText
                android:id="@+id/Address1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/addplayer_border"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:inputType="text"
                android:textColor="#191919"
                 />

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Country" />

            <Spinner
                android:id="@+id/country"
                android:layout_width="fill_parent"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#191919"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />
            <TextView
              android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="State" />
            <Spinner
                android:id="@+id/State"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#191919"
                android:layout_width="fill_parent"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="City" />
            <Spinner
                android:id="@+id/city"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#191919"
                android:layout_width="fill_parent"
                android:background="@drawable/addplayer_border"
                android:layout_height="40dp" />

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Sports" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:drawable/editbox_background"
                android:drawablePadding="16dp"
                android:textColor="#191919"
                android:hint="Select Your Sports"
                android:padding="12dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/cancelbtnbranch"
                    android:text="Cancel"
                    android:background="@drawable/addboarder"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginLeft="80dp"
                    android:layout_width="100dp"
                    android:layout_height="45dp">
                </Button>
                <Button
                    android:id="@+id/savebtn"
                    android:text="save"
                    android:textColor="@color/white"
                    android:backgroundTint="#0071bd"
                    android:textStyle="bold"
                    android:background="@drawable/addboarder"
                    android:layout_toRightOf="@id/cancelbtn"
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="45dp">
                </Button>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>


