<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:padding="10dp"
    android:background="@drawable/listboard"
    >

    <ImageView
        android:id="@+id/kitImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#44b0f8"
        android:src="@drawable/pimg" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#191919"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/kitname"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="2dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/kitid"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="7dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/branchname"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/kitlocation"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:textColor="#191919"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        android:gravity="end">

        <ImageView
            android:id="@+id/kitedit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/edit"></ImageView>

        <ImageView
            android:id="@+id/del"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/ic_delete">

        </ImageView>
    </LinearLayout>

</RelativeLayout>